<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="@drawable/card_foreground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/cardSeguimientoIndividual"
    android:background="@drawable/background_selector">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_selector"
        android:elevation="10dp"
        card_view:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/fotoJugadorSeguimientoIndividual"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/nombreJugadorInfo"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/nombreJugadorInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fotoJugadorSeguimientoIndividual"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>