<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="150dp" android:foreground="@drawable/card_foreground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/cardViewJugadorEquipoInfo"
    android:background="@drawable/background_selector">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/background_selector"
        card_view:cardCornerRadius="0dp"
        android:elevation="3dp">



        <ImageView
            android:id="@+id/escudoEquipoJugadorInfo"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />


        <TextView
            android:id="@+id/nombreJugadorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/escudoEquipoJugadorInfo"
            android:textColor="@android:color/holo_blue_dark" />



    </RelativeLayout>
</android.support.v7.widget.CardView>