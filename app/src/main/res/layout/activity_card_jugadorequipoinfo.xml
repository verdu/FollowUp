<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="@drawable/card_foreground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/cardViewJugadorEquipoInfo"
    android:background="@drawable/background_selector">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_selector"
        android:elevation="10dp"
        card_view:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/fotoJugador"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/nombreJugadorInfo"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/nombreJugadorInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fotoJugador"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp" />




        <CheckBox
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nombreJugadorInfo"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:button="@android:drawable/btn_star"
            android:padding="5dp" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/star"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/star"
            android:layout_toStartOf="@+id/star"
            android:background="@null"
            android:padding="5dp"
            android:src="@drawable/more" />

        <TextView
            android:id="@+id/posicionJugadorEquipoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fotoJugador"
            android:layout_toRightOf="@id/nombreJugadorInfo"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/alturaJugadorEquipoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fotoJugador"
            android:layout_toRightOf="@id/posicionJugadorEquipoInfo"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/idJugadorFavorito"
            android:layout_width="0px"
            android:layout_height="0px"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/idEquipoFavorito"
            android:layout_width="0px"
            android:layout_height="0px"
            android:visibility="invisible"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>