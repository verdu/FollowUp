<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="190dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="9dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/testMinutos"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="36dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:lines="1"
                android:text="Minutos"
                android:gravity="bottom"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/orange"
                android:textSize="12dp" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/minPicker"
                np_wheelItemCount="1"
                android:layout_width="60dp"
                android:layout_height="135dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/testMinutos"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:background="@color/white"
                app:np_dividerColor="@color/orange"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="170dp"
                app:np_max="40"
                app:np_min="00"
                app:np_selectedTextColor="@color/orange"
                app:np_selectedTextSize="29dp"
                app:np_textColor="@color/orange"
                app:np_textSize="22dp"
                app:np_typeface="@string/roboto_light"
                app:np_width="70dp" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/segPicker"
                np_wheelItemCount="1"
                android:layout_width="60dp"
                android:layout_height="135dp"
                android:layout_alignTop="@+id/minPicker"
                android:layout_toEndOf="@+id/minPicker"
                android:layout_toRightOf="@+id/minPicker"
                android:background="@color/white"
                app:np_dividerColor="@color/orange"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="170dp"
                app:np_max="59"
                app:np_min="00"
                app:np_selectedTextColor="@color/orange"
                app:np_selectedTextSize="29dp"
                app:np_textColor="@color/orange"
                app:np_textSize="22dp"
                app:np_typeface="@string/roboto_light"
                app:np_width="70dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
