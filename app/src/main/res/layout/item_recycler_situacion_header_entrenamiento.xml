<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="150dp" android:foreground="@drawable/card_foreground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/cardViewEquipoInfo"
    android:background="@drawable/background_selector">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_selector"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">

        <ImageView
            android:id="@+id/imagenEntrenamiento"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/training"/>

        <TextView
            android:id="@+id/testEntrenamiento"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/imagenEntrenamiento"
            android:layout_toRightOf="@+id/imagenEntrenamiento"
            android:gravity="center"
            android:lines="1"
            android:text="Entrenamiento"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/yellow"
            android:textSize="15dp" />

        <com.hanks.library.AnimateCheckBox
            android:id="@+id/animateCheckBox"
            android:layout_width="74dp"
            android:layout_height="63dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp"
            android:layout_toEndOf="@+id/imagenEntrenamiento"
            android:layout_toRightOf="@+id/imagenEntrenamiento"
            android:padding="15dp"
            app:animDuration="200"
            app:checkedColor="@color/yellow"
            app:lineColor="#fff"
            app:lineWidth="1.2dp"
            app:unCheckColor="@color/yellow" />


    </RelativeLayout>
</android.support.v7.widget.CardView>


